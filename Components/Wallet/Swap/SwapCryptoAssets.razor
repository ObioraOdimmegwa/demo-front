                                            </div>
                                            <div class="amount" style="font-size: 9pt">@("USDT".CoinToMoney(@ModelManager.Wallet.USDT,@ModelManager.Wallet.Currency).ToMoneyFormat())<span
                                                    class="currency currency-nio">@ModelManager.Wallet.Currency</span></div>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div><!-- .col -->
                        <div class="col-sm-4">
                            <div class="card bg-light">
                                <div class="nk-wgw sm">
                                    <a class="nk-wgw-inner" href="/convert/USDD">
                                        <div class="nk-wgw-name">
                                            <div class="nk-wgw-icon" style="background-color: #f5f6fa;">
                                                <img src="images/usdd.png" style="height: 15px; width: 15px;">
                                            </div>
                                            <h5 class="nk-wgw-title title">USD Digital</h5>
                                        </div>
                                        <div class="nk-wgw-balance">
                                            <div class="amount">@ModelManager.Wallet.USDD.ToMoneyFormat()<span class="currency currency-nio">USDD</span>
                                            </div>
                                            <div class="amount" style="font-size: 9pt">@("USDD".CoinToMoney(@ModelManager.Wallet.USDD,@ModelManager.Wallet.Currency).ToMoneyFormat())<span
                                                    class="currency currency-nio">@ModelManager.Wallet.Currency</span></div>
                                        </div>
                                    </a>
                                </div>
