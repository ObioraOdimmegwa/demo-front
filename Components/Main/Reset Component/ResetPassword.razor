@inherits ResetPasswordComponent

@page "/reset-password/{token}"

<div class="d-flex align-items-center position-relative height-lg-100vh">
    <div class="container">
        <div class="woocommerce">
            <div class="row no-gutters">
                <div class="col-md-8 col-lg-7 col-xl-6 offset-md-2 offset-lg-2 offset-xl-3 space-3 space-lg-0"
                    id="customer_login">

                    <div class="woocommerce-notices-wrapper"></div>

                    <div class="tab-content mt-5">

                        <div class="tab-pane active" id="customer-login-form" aria-labelledby="login-tab">

                            <EditForm Model="@ResetPasswordForm" class="lost_reset_password"  OnValidSubmit="@OnValidSubmit">
                                <div class="mb-7">
                                    <p style="color: #ffffff !important; font-size:1.2rem;">Enter a new password to access your wallet</p>
                                </div>
                                 @if (!string.IsNullOrEmpty(ErrorMessage))
                                {
                                    <div class="alert alert-danger alert-dismissible bg-danger" role="alert"
                                    style="color: white; border-radius: 10px">
                                        <i class="fa fa-times-circle"></i> @ErrorMessage
                                        <button type="button" class="close"
                                        @onclick="@(() => {ErrorMessage = string.Empty;})">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                }
                                <DataAnnotationsValidator/>
                                <ValidationSummary/>

                                <div class="form-group">
                                    <label class="form-label text-light" for="newpassword">New Password</label>
                                    <input @bind="@ResetPasswordForm.newpassword" type="password" class="form-control input-text" name="password" />
                                </div>


                                <div class="form-group">
                                    <label class="form-label text-light">Confirm Password</label>
                                    <input @bind="@ResetPasswordForm.confirmpassword" type="password" class="form-control input-text" name="password_confirmation"/>
                                </div>

                                <div class="clear"></div>
                                <div class="row align-items-center mb-5">
                                    <div class="col-8 col-sm-6">
                                        <button type="submit"
                                            class="btn btn-light transition-3d-hover button">Reset</button>
                                    </div>
                                </div>
                            </EditForm>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
